{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "esnext",
    "target": "es2022",
    "types": [],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "vitest.config.ts", "tsup.config.ts"]
}
